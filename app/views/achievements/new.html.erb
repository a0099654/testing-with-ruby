<%= simple_form_for @achievement, :html=> { class: 'form-horizontal' } do |f| %>
    <div class="form-horizontal">
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :privacy, collection: Hash[Achievement.privacies.map {|k,v| [k.split('_').first.capitalize, k]}] %>
    </div>
<% end %>